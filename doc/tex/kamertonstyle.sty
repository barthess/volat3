\renewcommand{\ESKDtheTitleFieldIIIl}{% СОГЛАСНОВАНО
  \ifx\ESKD@title@approving@sheet\@undefined
    \expandafter\ifx\csname ESKD@title@agreed@name@1\endcsname\relax\else
